
# Search forward and back with up/down arrows
"\e[A": history-search-backward
"\e[B": history-search-forward

# Old behaviour still available with Ctrl+P and Ctrl+N
# If that prevents Left and Right from working, fix them like this:

"\e[C": forward-char
"\e[D": backward-char

$if Bash
	Space: magic-space
$endif

# history insert at option position
"\M-o": "\C-p\C-a\M-f "

# bash history config
set match-hidden-files off
set completion-ignore-case on
set visible-stats on
set show-all-if-ambiguous on
# cycle through completion options
"\M-s": menu-complete

